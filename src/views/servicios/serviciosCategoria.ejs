<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head') %>
    <body>
        <%- include('../partials/header') %> 
        <main>
            <% for (let i = 0 ; i < categorias.length; i++ ) { %>
                <% if(categorias[i].id == categoryId) { %>
            <h1 class="servicios-h1"><%= categorias[i].nombre %></h1>
            <% }} %>
            <div class="servicios-p">
                <p></p>
            </div>
            <% for (let i = 0 ; i < servicios.length; i++ ) { %>
                <% if(servicios[i].category_id == categoryId) { %>
            <div class="box-servicio">
                <div class="box-servicio-left">
                    <div class="box-servicio-number"><%= servicios[i].id %></div>
                    <div class="box-servicio-txt">
                        <h2><%= servicios[i].nombre %></h2>
                        <p><%= servicios[i].descripcion %></p>
                        <p class="price"><%= servicios[i].precio %></p>
                    </div>
                    <div>
                        <button class="box-servicio-button">
                            <a href="/">VER DETALLES</a>
                        </button>
                    </div>
                </div>
                <div class="box-servicio-right">
                    <img src="<%= servicios[i].imagen %>" alt="<%= servicios[i].nombre %>">
                </div>
            </div>
            <% }} %>
    </main>
    <%- include('../partials/footer') %>
</body>
</html>